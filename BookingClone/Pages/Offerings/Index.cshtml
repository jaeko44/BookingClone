@page
@model BookingClone.Pages.OfferingIndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>
<div class="container">
    <p>
        <a asp-page="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.BookModel[0].LeaderName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BookModel[0].HotelName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BookModel[0].ValidFrom)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BookModel[0].ValidUntil)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BookModel[0].Destination)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BookModel[0].NetRate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.BookModel)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.LeaderName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HotelName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ValidFrom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ValidUntil)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Destination)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NetRate)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
